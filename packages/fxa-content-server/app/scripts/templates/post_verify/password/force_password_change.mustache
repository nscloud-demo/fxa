<div id="main-content" class="card force-password-change">
  <header>
    <h1 id="fxa-force-password-change-header">
      {{#serviceName}}
        <!-- L10N: For languages structured like English, the second phrase can read "to continue to %(serviceName)s" -->
        {{#t}}Please change your password{{/t}} <span class="service">{{#t}}to continue to %(serviceName)s{{/t}}</span>
      {{/serviceName}}
      {{^serviceName}}
        {{#t}}Please change your password{{/t}}
      {{/serviceName}}
    </h1>
  </header>

  <section>
    <form novalidate>
      <!-- hidden email field is to allow Fx password manager
         to correctly save the updated password. Without it,
         the password manager tries to save the old password
         as the username. -->
      <input type="email" value="{{email}}" class="hidden" />

      <p class="verification-email-message">
        {{#t}}We detected suspicious behavior on your Mozilla account. To protect your account, please create a new password. You’ll use this password to sign back in to all of your Mozilla account services.{{/t}}
      </p>

      <p class="verification-email-message">
        {{#t}}Synced history, bookmarks, logins, and other personal data will not be lost.{{/t}}
      </p>

      <div class="error"></div>

      <div class="tooltip-container mb-5">
        <input type="password" class="input-text tooltip-below" id="opassword" placeholder="{{#t}}Old password{{/t}}" pattern=".{8,}" required autofocus data-synchronize-show="true"/>
      </div>

      <div class="tooltip-container mb-5">
        <input type="password" class="input-text tooltip-below" id="password" placeholder="{{#t}}New password{{/t}}" pattern=".{8,}" required autofocus data-synchronize-show="true"/>
        <div id="password-strength-balloon-container" tabindex="-1"></div>
      </div>

      <div class="tooltip-container mb-5">
        <input type="password" class="tooltip-below input-text" id="vpassword" placeholder="{{#t}}Re-enter new password{{/t}}" required pattern=".{8,}" data-synchronize-show="true"/>
      </div>

      <div class="button-row">
        <button id="submit-btn" type="submit">{{#t}}Change password{{/t}}</button>
      </div>
    </form>
  </section>
</div>

